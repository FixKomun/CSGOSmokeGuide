<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FirstActivity"
    android:background="#111111"
    >

    <ImageView
        android:id="@+id/csgo_iv"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/csgoicon3"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:text="CS:GO SMOKE GUIDE"
        android:textSize="50dp"
        android:fontFamily="@font/longfox"
        android:textAlignment="center"
        android:textColor="#468694"
        android:layout_alignParentTop="true"
        android:layout_marginTop="25dp"
        />

    <Button
        android:id="@+id/csgoBtn"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:layout_alignBottom="@+id/csgo_iv"
        android:layout_centerInParent="true"
        android:layout_marginBottom="-40dp"
        android:text="START LEARNING"
        android:textColor="#111111"
        android:textSize="23dp">

    </Button>



</RelativeLayout>